# Embedding Configuration (local SigLIP model)
# Options: "auto" (default), "cuda", "cpu", "mps"
SIGLIP_DEVICE=auto
# Model name: google/siglip-base-patch16-512 (default) or similar
SIGLIP_MODEL_NAME=google/siglip-base-patch16-512

# Server Configuration
HOST=127.0.0.1
PORT=8001
RELOAD=true

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5174,http://127.0.0.1:5174

# Database Configuration
DB_NAME=app.db

# Image Processing
THUMBNAIL_SIZE=256
DEFAULT_BATCH_SIZE=12

# Clustering Configuration
CANVAS_SIZE=2000
UMAP_N_NEIGHBORS=15
UMAP_MIN_DIST=0.1

# Security (comma-separated list of allowed directory prefixes)
# Leave empty to allow any directory
ALLOWED_DIRECTORY_PREFIXES=
